.page {
  padding: 20rpx;
  background-color: #fdf8e3; /* 接近参考图的淡黄色背景 */
}

/* 通用卡片样式 */
.card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 32rpx; /* 内边距加大 */
  margin: 40rpx 30rpx 50rpx 30rpx;
  min-height: 240rpx; /* 统一高度增大 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 卡片1 */
.card-body {
  justify-content: space-between;
}

/* 圆圈睡眠水平 */
.caffeine-circle {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #ccc;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}
.caffeine-circle .fill {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f7a05a;
}
.sleep-line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: #888;
  border-top: 2rpx dashed #888;
  background-color: transparent;
}
.sleep-label {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  top: 45%;
}

/* 卡片1文字区域 */
.card-body-info {
  flex: 1;
  padding: 0 20rpx;
  padding-right: 120rpx;
  position: relative;
}
.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
}
.card-desc {
  font-size: 28rpx;
  color: #888;
}
.level-badge {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}
.level-low { background-color: #d3a67a; }
.level-mid { background-color: orange; }
.level-high { background-color: red; }
.value-row {
  display: flex;
  align-items: baseline;
  margin-top: 20rpx;
  gap: 4rpx;
}
.caffeine-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #a6653f;
}
.unit {
  font-size: 28rpx;
  color: #a6653f;
}

/* 熊图片 第一张卡片专用 */
.bear-img1 {
  width: 240rpx;   /* 放大图片 */
  height: auto;
  flex-shrink: 0;
  margin-left: auto;
  margin-right: 80rpx;
}

/* 卡片2 */
.card-daily {
  justify-content: space-between;
  min-height: 160rpx;
}
.card-daily-info {
  flex: 1;
}
.today-caffeine {
  display: flex;
  align-items: baseline;
  font-size: 32rpx;
  margin-top: 12rpx;
}
.bold { font-weight: bold; }
.brown { color: #a6653f; }
.slash { margin: 0 4rpx; }
.progress {
  height: 12rpx;
  background-color: #eee;
  border-radius: 6rpx;
  margin-top: 10rpx;
  overflow: hidden;
}
.progress-bar {
  height: 100%;
  background-color: #a6653f;
}
.bear-circle {
  width: 140rpx;
  flex-shrink: 0;
}

/* 卡片3 - 元气时刻 */
.orange-card {
  background: linear-gradient(135deg, #e8c4a0 0%, #d4b896 100%);
  justify-content: space-between;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(212, 184, 150, 0.12);
  animation: cardFloat 3s ease-in-out infinite;
  transition: all 0.3s ease;
}

.orange-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 30rpx rgba(212, 184, 150, 0.2);
}

@keyframes cardFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-2rpx);
  }
}

.vitality-info {
  flex: 1;
  color: #fff;
  padding-right: 20rpx;
  position: relative;
  z-index: 2;
}

.grey { 
  color: #fff; 
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.timer-section {
  margin: 16rpx 0;
  text-align: center;
  animation: breathe 4s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

.timer-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.timer-value {
  font-size: 72rpx;
  font-weight: 900;
  color: #fff;
  text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.2);
  margin: 12rpx 0;
  letter-spacing: 2rpx;
  line-height: 1;
  animation: timerPulse 2s ease-in-out infinite;
  transition: all 0.3s ease;
}

@keyframes timerPulse {
  0%, 100% {
    transform: scale(1);
    text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: scale(1.05);
    text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3), 0 0 20rpx rgba(255, 255, 255, 0.3);
  }
}

.timer-end-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  margin-top: 8rpx;
}

.progress.light {
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 6rpx;
  height: 14rpx;
  margin: 16rpx 0;
  overflow: hidden;
}

.progress-bar.light {
  background: linear-gradient(90deg, #fff 0%, #f1faee 50%, #fff 100%);
  background-size: 200% 100%;
  border-radius: 6rpx;
  box-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.3);
  transition: width 0.3s ease;
  animation: progressFlow 3s ease-in-out infinite;
}

@keyframes progressFlow {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.small-desc {
  font-size: 24rpx;
  margin-top: 12rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}
/* 设置区域 悬浮底部 */
.settings {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx 32rpx;
  border-radius: 25rpx;
  margin: 40rpx 30rpx 50rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 80rpx;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.settings-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
}
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
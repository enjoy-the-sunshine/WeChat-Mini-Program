/* 微信风格对话界面样式 */

/* 主容器 */
.chat-page {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: visible;
}

/* 背景图片 */
.chat-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: 0;
}

/* 顶部导航栏 */
.nav-bar {
  position: relative;
  z-index: 10;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.nav-content {
  display: flex;
  align-items: center;
}

.nav-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #191919;
}

/* 消息区域 */
.message-area {
  flex: 1;
  height: 100%;
  min-height: 0; 
  padding: 24rpx 32rpx;
  position: relative;
  z-index: 5;
  box-sizing: border-box;
}

/* 欢迎消息 */
.welcome-msg {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.welcome-avatar {
  margin-right: 16rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.welcome-bubble {
  flex: 1;
  max-width: 70%;
}

.welcome-text {
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.4;
  color: #191919;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: block;
  margin-bottom: 24rpx;
}

.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quick-action-btn {
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #8B4513;
  text-align: center;
  border: 1rpx solid rgba(139, 69, 19, 0.2);
  transition: all 0.2s ease;
}

.quick-action-btn:active {
  background: #8B4513;
  color: #FFFFFF;
  transform: scale(0.98);
}

/* 消息列表 */
.msg-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 40rpx;
}

.msg-item {
  display: flex;
  align-items: flex-start;
}

/* 机器人消息 */
.bot-msg {
  justify-content: flex-start;
}

.bot-msg-content {
  display: flex;
  align-items: flex-start;
  max-width: 80%;
}

.bot-msg .msg-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.bot-bubble {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.bot-bubble::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 12rpx solid #FFFFFF;
}

/* 用户消息 */
.user-msg {
  justify-content: flex-end;
}

.user-msg-content {
  display: flex;
  align-items: flex-start;
  max-width: 80%;
  flex-direction: row;
  justify-content: flex-end;
}

.user-msg .msg-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  order: 2;
}

.user-msg .msg-bubble {
  order: 1;
}

.user-bubble {
  background: #95EC69;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  position: relative;
}

.user-bubble::after {
  content: '';
  position: absolute;
  right: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid #95EC69;
}

.msg-text {
  font-size: 28rpx;
  line-height: 1.4;
  color: #191919;
  word-wrap: break-word;
}

/* 正在输入提示 */
.typing-indicator {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.typing-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.typing-bubble {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.typing-bubble::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 12rpx solid #FFFFFF;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background: #C0C0C0;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) { animation-delay: 0s; }
.typing-dot:nth-child(2) { animation-delay: 0.2s; }
.typing-dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

/* 快捷问题 */
.quick-questions {
  position: relative;
  z-index: 10;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.quick-scroll {
  white-space: nowrap;
}

.quick-list {
  display: flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.quick-item {
  background: rgba(255, 255, 255, 0.9);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #8B4513;
  white-space: nowrap;
  border: 1rpx solid rgba(139, 69, 19, 0.2);
  transition: all 0.2s ease;
}

.quick-item:active {
  background: #8B4513;
  color: #FFFFFF;
  transform: scale(0.95);
}

/* 输入框 */
.input-bar {
  position: relative;
  z-index: 10;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  pointer-events: auto;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: transparent;
  border-radius: 8rpx;
  padding: 8rpx;
  gap: 16rpx;
}

.text-input {
  flex: 1;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  border: 1rpx solid #E0E0E0;
  border-radius: 24rpx;
  outline: none;
  color: #191919;
  min-height: 40rpx;
  max-height: 120rpx;
}

.text-input::placeholder {
  color: #999999;
}

.send-btn {
  background: #4CAF50;
  border: 1rpx solid #4CAF50;
  border-radius: 24rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
  z-index: 999;
  pointer-events: auto;
  cursor: pointer;
  box-shadow: 0 0 0 2rpx rgba(76, 175, 80, 0.2);
}

.send-btn:active {
  transform: scale(0.95);
}

.send-btn.send-active {
  background: #45A049;
  border-color: #45A049;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.3);
}

.send-text {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 500;
}

/* 底部提示 */
.footer-tip {
  position: relative;
  z-index: 10;
  padding: 12rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  text-align: center;
}

.tip-text {
  font-size: 20rpx;
  color: #999999;
  line-height: 1.4;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .message-area {
    padding: 20rpx 24rpx;
  }
  
  .nav-bar {
    padding: 0 24rpx;
  }
  
  .input-bar {
    padding: 12rpx 24rpx;
  }
  
  .quick-questions {
    padding: 12rpx 24rpx;
  }
  
  .footer-tip {
    padding: 8rpx 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .nav-bar {
    background: rgba(30, 30, 30, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .nav-title {
    color: #FFFFFF;
  }
  
  .welcome-text,
  .bot-bubble,
  .typing-bubble {
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }
  
  .bot-bubble::before {
    border-right-color: rgba(255, 255, 255, 0.1);
  }
  
  .typing-bubble::before {
    border-right-color: rgba(255, 255, 255, 0.1);
  }
  
  .user-bubble {
    background: #07C160;
  }
  
  .msg-text {
    color: #FFFFFF;
  }
  
  .input-bar,
  .quick-questions,
  .footer-tip {
    background: rgba(30, 30, 30, 0.95);
    border-top-color: rgba(255, 255, 255, 0.1);
  }
  
  .input-wrapper {
    background: transparent;
  }
  
  .text-input {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: #FFFFFF;
  }
  
  .text-input::placeholder {
    color: #666666;
  }
  
  .quick-item {
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .tip-text {
    color: #666666;
  }
}
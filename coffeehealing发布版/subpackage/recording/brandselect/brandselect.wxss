/* subpackage/recording/brandselect/brandselect.wxss */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #FDF8E3 0%, #f5f0d8 50%, #e8e0c8 100%);
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 主内容区域 */
.main-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background: #FDF8E3;
  overflow: hidden;
  width: 100%;
  height: 100vh;
}

/* 左侧侧边栏 */
.sidebar {
  width: 200rpx;
  background: #f8f4e8;
  border-right: 1rpx solid #d4c4a8;
  overflow-y: auto;
  flex-shrink: 0;
}

.sidebar-item {
  padding: 25rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  border-bottom: 1rpx solid #e8e0c8;
  margin: 2rpx 0;
}

.sidebar-item:active {
  background: #e8e0c8;
}

.sidebar-item.active {
  background: #AC886D;
  color: #FDF8E3;
  box-shadow: 0 2rpx 8rpx rgba(172, 136, 109, 0.2);
}

.sidebar-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.brand-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

.sidebar-text {
  font-size: 24rpx;
  text-align: center;
  line-height: 1.2;
  color: #8b6f5a;
  font-weight: 400;
}

.sidebar-item.active .sidebar-text {
  color: #FDF8E3;
  font-weight: 500;
}

.brand-separator {
  padding: 20rpx 15rpx 10rpx 15rpx;
  border-bottom: 1rpx solid #d4c4a8;
  margin: 5rpx 0;
}

.separator-text {
  font-size: 22rpx;
  color: #AC886D;
  font-weight: 500;
  text-align: center;
}

/* 右侧饮品列表 */
.drink-list {
  width: calc(100% - 200rpx);
  padding: 20rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}

/* 自定义咖啡按钮 */
.custom-add-btn {
  background: #AC886D;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(172, 136, 109, 0.2);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
  border: 1rpx solid #8b6f5a;
  width: 450rpx;
}

.custom-add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.2);
}

.custom-add-icon {
  color: #FDF8E3;
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.custom-add-text {
  color: #FDF8E3;
  font-size: 26rpx;
  font-weight: 400;
}

.category-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #AC886D;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #d4c4a8;
  text-align: center;
}

.drink-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  margin-right: 20rpx;
  background: #f8f4e8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  border: 1rpx solid #e8e0c8;
  box-shadow: 0 2rpx 8rpx rgba(172, 136, 109, 0.05);
  position: relative;
  width: 514rpx;
  box-sizing: border-box;
  top: 0rpx;
}

.drink-item:active {
  transform: scale(0.98);
  border-color: #AC886D;
  box-shadow: 0 4rpx 12rpx rgba(172, 136, 109, 0.1);
}

.drink-icon {
  font-size: 48rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FDF8E3;
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.1);
  border: 1rpx solid #e8e0c8;
}

.drink-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.drink-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #8b6f5a;
  margin-bottom: 8rpx;
}

.drink-caffeine {
  font-size: 24rpx;
  color: #AC886D;
  font-weight: 500;
  background: rgba(172, 136, 109, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  display: inline-block;
  width: fit-content;
}

.drink-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.favorite-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(172, 136, 109, 0.1);
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(172, 136, 109, 0.2);
}

.favorite-icon {
  font-size: 32rpx;
  color: #c4a08a;
  transition: all 0.3s ease;
}

.favorite-btn.favorited .favorite-icon {
  color: #AC886D;
}

/* 删除按钮样式 */
.delete-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(231, 76, 60, 0.1);
  border: 1rpx solid rgba(231, 76, 60, 0.3);
}

.delete-btn:active {
  transform: scale(0.9);
  background: rgba(231, 76, 60, 0.2);
}

.delete-icon {
  font-size: 28rpx;
  color: #e74c3c;
  transition: all 0.3s ease;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  flex: 1;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
  color: #AC886D;
}

.empty-text {
  font-size: 28rpx;
  color: #8b6f5a;
  font-weight: 400;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(139, 111, 90, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #FDF8E3;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border: 1rpx solid #d4c4a8;
  box-shadow: 0 8rpx 24rpx rgba(172, 136, 109, 0.2);
  position: relative;
  top: 0;
  left: 0;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e8e0c8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #AC886D;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #FDF8E3;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #FDF8E3;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(253, 248, 227, 0.2);
}

.modal-close:active {
  background: rgba(253, 248, 227, 0.3);
  transform: scale(0.9);
}

.modal-body {
  padding: 30rpx;
  background: #FDF8E3;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #8b6f5a;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 90%;
  padding: 20rpx;
  border: 1rpx solid #d4c4a8;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #f8f4e8;
  transition: all 0.3s ease;
  color: #8b6f5a;
}

.form-input:focus {
  border-color: #AC886D;
  background: #FDF8E3;
  box-shadow: 0 2rpx 8rpx rgba(172, 136, 109, 0.1);
}

.form-picker {
  width: 90%;
  padding: 20rpx;
  border: 1rpx solid #d4c4a8;
  border-radius: 10rpx;
  background: #f8f4e8;
  color: #8b6f5a;
}

.picker-text {
  font-size: 28rpx;
  color: #8b6f5a;
  font-weight: 400;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #e8e0c8;
  display: flex;
  gap: 20rpx;
  background: #FDF8E3;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #f8f4e8;
  color: #8b6f5a;
  border: 1rpx solid #d4c4a8;
}

.btn-cancel:active {
  background: #e8e0c8;
  transform: scale(0.98);
}

.btn-confirm {
  background: #AC886D;
  color: #FDF8E3;
  border: 1rpx solid #8b6f5a;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.2);
}
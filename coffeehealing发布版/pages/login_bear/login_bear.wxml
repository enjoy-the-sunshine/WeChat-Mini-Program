<!--pages/login_bear/login_bear.wxml-->
<view class="container"  style="position: relative; left: 0rpx; top: 0rpx">
  

  <!-- 信息提示区域 -->
  <view class="info-bubble"  style="position: relative; left: 0rpx; top: 121rpx">
    <text class="main-title">如何称呼你的小熊?</text>
    <text class="subtitle">它将是你探索健康生活,管理咖啡因的最佳伙伴</text>
  </view>

  <!-- 小熊插图 -->
  <view class="bear-container">
    <image class="bear-image" src="../images/bear_fly.png" mode="aspectFit" style="width: 508rpx; height: 494rpx; display: block; box-sizing: border-box; position: relative; left: -1rpx; top: 91rpx"></image>
    <!-- 可爱装饰 -->
    <view class="decoration-heart" style="position: absolute; left: 637rpx; top: 62rpx">💕</view>
    <view class="decoration-star">⭐</view>
  </view>

  <!-- 输入框 -->
  <view class="input-container" style="position: relative; left: 0rpx; top: -25rpx; height: 85rpx; display: block; box-sizing: border-box">
    <input style="position: relative; left: 1rpx; top: 48rpx" 
      class="name-input" 
      placeholder="请输入小熊的名字" 
      value="{{bearName}}"
      bindinput="onNameInput"
      maxlength="10"
    />
  </view>

  <!-- 按钮区域 -->
  <view class="button-container">
    <button class="btn confirm-btn" bindtap="onConfirm" style="position: relative; left: 4rpx; top: 4rpx">OK!</button>
    <button class="btn skip-btn" bindtap="onSkip" style="position: relative; left: 4rpx; top: 4rpx">跳过</button>
  </view>


</view>

/* pages/register/register.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #FDF8E3;
    height: 100vh;
    padding-top: 60rpx;
  }
  
  .bear-fly { width: 200rpx; margin: 40rpx 0; }
  .title { font-size: 40rpx; margin-bottom: 40rpx; }
  
  .input {
    width: 500rpx;
    height: 90rpx;
    background: #fff;
    border: 1rpx solid #ccc;
    border-radius: 12rpx;
    margin: 20rpx 0;
    padding-left: 20rpx;
    font-size: 30rpx;
  }
  
  .password-box { position: relative; }
  .eye {
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 999;
  }
  /* 避免输入框覆盖眼睛图标点击区域 */
  .password-box .input { padding-right: 100rpx; }
  
  .agreement {
    width: 500rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    margin: 30rpx 0;
    color: #797979;
    flex-wrap: wrap;
  }
  
  .checkbox { margin-right: 12rpx; transform: scale(0.8); }
  .link { color: #84a9dd; margin: 0 4rpx; }
  
  /* 按钮：颜色与“登录页”一致 */
  .btn {
    width: 500rpx;
    height: 90rpx;
    border-radius: 45rpx;
    background-color: rgba(161, 202, 226, 0.23); /* 默认浅蓝 */
    color: #797979;
    text-align: center;
    line-height: 90rpx;
    margin: 40rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: bold;
    border: none;
    outline: none;
    transition: all .2s ease;
  }
  
  /* 高亮（三个文本框都有输入且勾选协议） */
  .btn--active {
    background-color: #A1CAE2;
    color: #ffffff;
    box-shadow: 0 6rpx 20rpx rgba(161, 202, 226, 0.35);
  }
  
  /* 按压反馈 & 去掉原生边框 */
  .btn--press { transform: scale(.98); }
  button::after { border: none; }
  
  .tips {
    width: 500rpx;
    display: flex;
    justify-content: center;
    font-size: 26rpx;
    margin: 20rpx 0;
    color: #797979;
  }
  
  .problem { font-size: 24rpx; color: #666; text-decoration: underline; }
  
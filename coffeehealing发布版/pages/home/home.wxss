page {
    background-color: #fdf8e3;
    font-family: 'Noto Sans SC', sans-serif;
    color: #5c3a21;
    overflow-x: hidden; /* 仅新增：禁用横向滚动 */
}
.page {
    padding: 38.6rpx 38.6rpx 0 38.6rpx;
    height: 100vh;
    overflow-y: auto;
    position: relative;
    box-sizing: border-box;
    overflow-x: hidden;  /* 仅新增：双保险 */
    touch-action: pan-y; /* 仅新增：只允许纵向手势 */
}
  
/* 顶部小熊插画 */
.bear-illustration-container {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}
.bear-illustration-wrapper {
  position: relative;
  width: 100%;
  max-width: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 不再使用 overflow:hidden，避免裁掉小熊的阴影 */
}
.bear-illustration {
  width: 100%;
  height: auto;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(92, 58, 33, 0.15);
  background: rgba(253, 248, 227, 0.6);
  padding: 40rpx;
  position: relative;
  overflow: visible;
  transition: all 0.3s ease;
  animation: fadeInDown 0.8s ease-out;
  display: block;
  margin: 0 auto;
}
.bear-illustration:hover { 
  transform: translateY(-4rpx); 
  box-shadow: 0 12rpx 32rpx rgba(92, 58, 33, 0.2); 
}
.bear-illustration::before{
  content:''; position:absolute; top:-50%; left:-50%; width:200%; height:200%;
  background: radial-gradient(circle, rgba(255,255,255,.15) 0%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}
.bear-illustration::after{
  content:''; position:absolute; top:0; left:-100%; width:100%; height:100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,.2), transparent);
  animation: slideRight 2.5s ease-in-out infinite;
}
@keyframes fadeInDown { from{opacity:0; transform:translateY(-30rpx);} to{opacity:1; transform:translateY(0);} }
@keyframes shimmer { 0%,100%{transform:rotate(0)} 50%{transform:rotate(180deg)} }
@keyframes slideRight { 0%{left:-100%} 100%{left:100%} }
  
/* 通用卡片 */
.card {
  background-color: #fff9f0;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(92,58,33,.1);
  padding: 38.6rpx 38.6rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
  position: relative;
}
/* 两张卡片的高度可独立调 */
.caffeine-card { min-height: 320rpx; }
.forecast-card {
  min-height: 120rpx;
  display: flex;                 /* 同容器水平排列 */
  align-items: center;           /* 上下居中 */
  justify-content: space-between;/* 左文字右箭头 */
  padding: 16 32rpx;
  box-sizing: border-box;
}
.tips-card {
  min-height: 120rpx;
  display: flex;                 /* 同容器水平排列 */
  align-items: center;           /* 上下居中 */
  justify-content: space-between;/* 左文字右箭头 */
  padding: 16 32rpx;
  box-sizing: border-box;
}
  
/* 右上角箭头（仅给 caffeine-card 用的绝对定位容器） */
.card-header {
  position: absolute;
  top: 26rpx; right: 26rpx;
  width: 88rpx; height: 88rpx;
  display: flex; align-items: center; justify-content: center;
}
  
/* 通用箭头尺寸 */
.arrow-icon { width: 36rpx; height: 36rpx; }
  
/* 标题 */
.card-title { margin-bottom: 20rpx; }
.title-text { font-size: 40rpx; font-weight: bold; color: #5c3a21; }
  
/* 两列指标（行间距已压紧） */
.caffeine-grid{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;                 /* 列间距 */
  margin: 8rpx 0 32rpx;
}
.caffeine-item { text-align: center; }
.label{
  font-size: 32rpx;
  color: #8c7b6e;
  display: block;
  margin-bottom: -25rpx;        /* ↓ 关键：缩小与数值的行距 */
}
.value{
  font-size: 48rpx;
  font-weight: 700;
  color: #5c3a21;
  line-height: 1;             /* ↓ 更紧凑 */
}
.unit{ font-size: 36rpx; margin-left: 8rpx; }
  
/* 元气时刻 */
.energy-time{
  background-color: #ffebee;
  padding: 28rpx 32rpx;
  border-radius: 24rpx;
  text-align: center;
}
.energy-title{
  font-size: 32rpx;
  color: #8c7b6e;
  display: block;
  margin-bottom: -20rpx;
  /* 若要靠左：text-align:left; */
}
.energy-subtitle{ font-size: 40rpx; font-weight: 700; color: #5c3a21;line-height: 1.2; }
.highlight{ color: #ff6b8b; }
  
/* 圆形添加按钮（底部居中+安全区） */
.circle-btn{
  position: fixed;
  left: 50%;
  bottom: calc(-60rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: 90rpx; height: 90rpx;
  border-radius: 50%;
  background-color: #AC886D;
  display: flex; justify-content: center; align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(255,255,255,.3);
  z-index: 1000;
  transition: all .3s ease;
}
.circle-btn{
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  width: 90rpx; height: 90rpx;
  border-radius: 50%;
  background-color: #AC886D;
  display: flex; justify-content: center; align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,.08);
  z-index: 1000;
}
.circle-plus{ font-size: 70rpx; color:#fff; line-height:1; }
  
/* 底部小熊图片 */
.bottom-bear-container {
  display: flex;
  justify-content: center;
  margin: 40rpx 0 0 0;
  width: 100%;
}
  
.bottom-bear {
  width: 100%;
  max-width: 100%;
  height: auto;
  opacity: 0.8;
  transition: all 0.3s ease;
}
  
.bottom-bear:hover {
  opacity: 1;
  transform: scale(1.02);
}

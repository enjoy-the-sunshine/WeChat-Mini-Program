<view class="container" style="height: 1450rpx;">

<!-- 账号与安全 -->
<view class="section" style="height: 180rpx; position: relative;">
  <view class="section-title" style="position: relative; left: -202rpx; top: -141rpx; font-family: '思源黑体'; font-size: {{24*1.93}}rpx; color: #98592C">
    账号与安全
    <image src="/images/bearcoffee.png" style="position: absolute; top: -66rpx; right: 0px; width: 272rpx; height: 264rpx; left: 366rpx"
      class="icon-large" />
  </view>
</view>

<!-- 绑定手机号 -->
<view class="section" style="height: 140rpx; display: flex; align-items: center; box-sizing: border-box">
  <view class="section-title" style="font-family: '思源黑体'; font-size: {{20*1.93}}rpx; color: #AC886D; position: relative; left: 95rpx; top: -277rpx; width: 324rpx; display: flex; box-sizing: content-box">
    <image style="width: 110rpx; height: 110rpx; display: inline-block; vertical-align: middle; box-sizing: border-box; margin-right: 10rpx"
    class="icon-small" src="/images/happy.png" />
    绑定手机号
  </view>
  <view class="input-panel" style="position: relative; left: -162rpx; top: -173rpx; height: 110rpx; display: flex; box-sizing: border-box">
    <input class="input-value" placeholder="请输入手机号" bindfocus="showModal" data-item="手机号" value="{{phoneNumber}}" />
  </view>
</view>

<!-- 绑定微信号 -->
<view class="section" style="height: 108rpx; display: flex; align-items: center; box-sizing: border-box">
  <view class="section-title" style="font-family: '思源黑体'; font-size: {{20*1.93}}rpx; color: #AC886D; position: relative; left: 104rpx; top: -206rpx; width: 322rpx; display: flex; box-sizing: border-box">
    <image style="width: 110rpx; height: 110rpx; display: inline-block; vertical-align: middle; box-sizing: border-box; margin-right: 10rpx" class="icon-small" src="/images/happy.png" />
    绑定微信号
  </view>
  <view class="input-panel" style="position: relative; left: -161rpx; top: -101rpx; width: 485rpx; display: flex; box-sizing: border-box; height: 110rpx">
    <input class="input-value" placeholder="请输入微信号" bindfocus="showModal" data-item="weChatId" value="{{weChatId}}" />
  </view>
</view>

<!-- 密码修改 -->
<view class="section" style="height: 72rpx; display: block; box-sizing: border-box; position: relative; left: 0rpx; top: -33rpx">
  <view class="section-title" style="position: relative; left: -62rpx; top: -110rpx; font-family: '思源黑体'; font-size: {{20*1.93}}rpx; color: #AC886D">
    <image style="width: 110rpx; height: 110rpx; display: block; box-sizing: border-box" class="icon-small" src="/images/happy.png" />
    密码修改
  </view>
  <view class="input-panel" style="position: relative; left: 0rpx; top: -120rpx; height: 110rpx; display: flex; box-sizing: border-box">
    <text bindtap="showModal" data-item="旧密码" class="input-value" style="color: #333333; font-family: '思源黑体'; font-size: {{14*1.93}}rpx;">点击此处进行验证</text>
  </view>
</view>

<!-- 账户注销 -->
<view class="section" style="position: relative; left: 0rpx; top: -28rpx; height: 72rpx; display: block; box-sizing: border-box">
  <view class="section-title" style="position: relative; left: -58rpx; top: 0rpx; font-family: '思源黑体'; font-size: {{20*1.93}}rpx; color: #AC886D">
    <image style="width: 110rpx; height: 110rpx; display: block; box-sizing: border-box" class="icon-small" src="/images/happy.png" />
    账户注销
  </view>
  <view class="input-panel" style="position: relative; left: 0rpx; top: -10rpx; height: 110rpx; display: flex; box-sizing: border-box">
    <text class="input-value" style="color: #FF0335; font-family: '思源黑体'; font-size: {{14*1.93}}rpx;">账户注销申请</text>
  </view>
</view>

<!-- 底部插画 -->
<image style="height: 314rpx; display: block; box-sizing: border-box; position: relative; left: 0rpx; top: 95rpx; width: 654rpx" class="footer-image" src="/images/background-footer2.png"
  alt="底部插画" />

<!-- 修改弹窗 -->
<view class="modal" wx:if="{{modalVisible}}" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.5); display: flex; justify-content: center; align-items: center; z-index: 1000;">
  <view class="modal-content" style="width: 80%; background-color: #fdf8e3; border-radius: 25px; padding: 20px; box-sizing: border-box; display: flex; flex-direction: column; align-items: center;">
    <view class="modal-header" style="display: flex; flex-direction: column; align-items: center; margin-bottom: 30rpx;">
      <image src="/images/avatar.png" class="icon" style="width: 50px; height: 50px; margin-right: 10px;" />
      <text style="font-family: '思源黑体'; font-size: 18rpx; color: #AC886D;">{{modalTitle}}</text>
      <view>
        <image wx:if="{{modalType === '头像'}}" src="{{avatar || '/images/avatar.png'}}" style="width: 200rpx; height: 200rpx;" />
        <input wx:else class="modal-input" value="{{modalInput}}" bindinput="updateInput" placeholder="请输入内容" style="width: 80%; background-color: #ffffff; border: none; padding: 10rpx; border-radius: 25rpx; box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15); margin: 20rpx 0;" />
      </view>
    </view>
    <view class="modal-actions" style="display: flex; justify-content: space-around; width: 100%;">
      <button class="modal-button" bindtap="confirmModal" style="background-color: #d0e4f7; border: none; border-radius: 25rpx; padding: 10rpx 20rpx; box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15); font-size: 16px; margin: 0 15rpx; width: 160rpx;">确认</button>
      <button class="modal-button" bindtap="hideModal" style="background-color: #d0e4f7; border: none; border-radius: 25rpx; padding: 10rpx 20rpx; box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15); font-size: 16px; margin: 0 15rpx; width: 160rpx;">返回</button>
    </view>
  </view>
</view>


</view>

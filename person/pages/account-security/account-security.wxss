.container {
  background-color: #fdf8e3;
  display: flex;
  flex-direction: column;
  height: 50vh;
}

.section-title-main {
  font-size: 53.85rpx;
  font-weight: bold;
  color: #98592C;
  position: relative;
  margin-bottom: 20rpx;
}

.icon-large {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 38.6rpx;
  font-weight: bold;
  color: #98592C;
  display: flex;
  align-items: center;
}

.icon-small {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.input-panel {
  background-color: #ffffff;
  width: 486rpx; /* 252 * 1.93 的结果 */
  height: 108rpx; /* 56 * 1.93 的结果 */
  border-radius: 50rpx; /* 大约对应 25px 的圆角 */
  margin-top: 10rpx;
  padding: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 3px 6px rgba(0,0,0,0.15); /* 黑色 15% / X0 Y3 B6 */
}



.input-value {
  font-size: 24rpx;
  color: #333;
}

.delete-account {
  color: #ff0000;
}

.footer-image {
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  position: relative;
  bottom: 0;
}

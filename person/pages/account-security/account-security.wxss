.container {
  background-color: #fdf8e3;
  display: flex;
  flex-direction: column;
  height: 50vh;
}

.section-title-main {
  font-size: 53.85rpx;
  font-weight: bold;
  color: #98592C;
  position: relative;
  margin-bottom: 20rpx;
}

.icon-large {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 38.6rpx;
  font-weight: bold;
  color: #98592C;
  display: flex;
  align-items: center;
}

.icon-small {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.input-panel {
  background-color: #ffffff;
  width: 486rpx; /* 252 * 1.93 的结果 */
  height: 108rpx; /* 56 * 1.93 的结果 */
  border-radius: 50rpx; /* 大约对应 25px 的圆角 */
  margin-top: 10rpx;
  padding: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 3px 6px rgba(0,0,0,0.15); /* 黑色 15% / X0 Y3 B6 */
}



.input-value {
  font-size: 24rpx;
  color: #333;
}

.delete-account {
  color: #ff0000;
}

.footer-image {
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  position: relative;
  bottom: 0;
}
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 400rpx;
  background-color: #fdf8e3; /* Light background color */
  border-radius: 25px; /* Rounded corners */
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.icon {
  width: 50px; /* Icon size */
  height: 50px;
  margin-right: 10px; /* Space between icon and text */
}

.modal-input {
  width: 80%;
  background-color: #ffffff;
  border: none;
  padding: 10rpx;
  border-radius: 25rpx;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  margin: 20rpx 0;
}

.modal-actions {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.modal-button {
  background-color: #d0e4f7;
  border: none;
  border-radius: 25rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  font-size: 16px;
  margin: 0 15rpx;
  width: 80rpx; /* Fixed button width */
}

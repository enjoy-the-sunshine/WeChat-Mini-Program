.container {
  background-color: #fff8dc;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 40rpx;
}

/* 标题背景统一 */
.section-title {
  background-color: #f5d399;
  padding: 20rpx;
  border-radius: 25rpx;
  width: 300rpx;
  text-align: center;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #754c24;
}

/* 列表项 */
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fdf8e3;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.item-left {
  display: flex;
  align-items: center;
}

.brand-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.divider {
  height: 2rpx;
  background-color: #eec262;
  margin: 20rpx 0;
}

page {
  background-color: #fff9e9;
}

.page {
  padding: 10px;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  padding: 20px;
  margin-bottom: 20px;
}

/* 咖啡因卡片布局 */
.caffeine-info {
  display: flex;
  align-items: center;
}

.bear-img {
  width: 100px;
  height: auto;
}

.caffeine-text {
  margin-left: 16px;
  flex: 1;
}

.caffeine-item {
  margin-bottom: 8px;
}

.label {
  font-size: 14px;
  color: #888;
  margin-right: 10px;
}

.value {
  font-size: 22px;
  font-weight: bold;
  color: #9b5735;
}

.energy-time {
  display: flex;
  align-items: center;
  background-color: #eec8a7;
  border-radius: 12px;
  padding: 10px;
}

.bear-face {
  width: 40px;
  height: auto;
  margin-right: 10px;
}

.energy-text .title {
  font-size: 16px;
  color: #9b5735;
  font-weight: bold;
}

.energy-text .subtitle {
  font-size: 14px;
  color: #555;
}

.energy-text .time {
  color: #9b5735;
  font-weight: bold;
}

/* 标题 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #9b5735;
  margin-bottom: 8px;
}

/* 柱状图卡片 */
.chart-card {
  padding: 20px;
  height: 500rpx;
}

.circle-btn {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #9b5735;
  border-radius: 50%;
  background-color: #fff9e9;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: -20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.circle-plus {
  font-size: 72rpx;
  color: #9b5735;
  line-height: 80rpx;
  text-align: center;
  font-weight: 300;
}

.card-header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.arrow-icon {
  width: 60rpx;
  height: auto;
}
ec-canvas {
  width: 100%;
  height: 100%;
}

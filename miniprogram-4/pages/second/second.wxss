/* 页面整体 */
.page {
  padding: 20rpx;
  padding-bottom: 40rpx;
  background-color: #fdf6e3;
}

.card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.orange-card {
  background-color: #f7e0d2;
}

/* 公共文字样式 */
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #888;
}

.caffeine-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #a6653f;
}

.unit {
  font-size: 24rpx;
  color: #a6653f;
}

.bold {
  font-weight: bold;
}

.brown {
  color: #a6653f;
}

/* 卡片1专用样式 */
.card1 {
  justify-content: space-between;
}

.caffeine-circle {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #ccc;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.caffeine-circle .fill {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f7a05a; /* 橙色填充 */
}
.sleep-line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: #888;
}
.sleep-label {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  top: 45%;
}

.card1-middle {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.level-badge {
  position: absolute;
  top: 80rpx;
  left: -30rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: white;
}
.level-low { background-color: #a6653f; }
.level-mid { background-color: orange; }
.level-high { background-color: red; }

.value-row {
  display: flex;
  align-items: flex-end;
  margin-top: 60rpx;
}

.bear-img1 {
  width: 150rpx;
}

/* 其他原有样式保持 */
.progress {
  height: 12rpx;
  background-color: #eee;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.progress-bar {
  height: 100%;
  background-color: #a6653f;
  border-radius: 6rpx;
}

.progress.light {
  background-color: rgba(255,255,255,0.5);
}

.progress-bar.light {
  background-color: white;
}

.timer-label {
  font-size: 24rpx;
  color: white;
  margin-top: 10rpx;
}

.timer-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.small-desc {
  font-size: 20rpx;
  color: white;
  margin-top: 10rpx;
}

.settings {
  display: flex;
  align-items: center;
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-top: 60rpx;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.settings-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.bear-circle {
  width: 80rpx;
  margin-left: 20rpx;
}

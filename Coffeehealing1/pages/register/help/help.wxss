/* pages/register/help/help.wxss */
.container {
  background-color: #FDF8E3;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  background: linear-gradient(135deg, #84A9DD 0%, #5B7BB8 100%);
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  max-width: 700rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.content {
  width: 100%;
  max-width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 50rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.intro {
  background: linear-gradient(135deg, #E8F2FF 0%, #D1E7FF 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  border-left: 8rpx solid #84A9DD;
  box-shadow: 0 4rpx 16rpx rgba(132, 169, 221, 0.15);
}

.intro-text {
  font-size: 34rpx;
  color: #2C5AA0;
  line-height: 52rpx;
  font-weight: 600;
  text-align: center;
  letter-spacing: 1rpx;
}

.article {
  margin-bottom: 50rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 20rpx;
  border: 1rpx solid #E8E8E8;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.article:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.article-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #84A9DD;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #E8E8E8;
  position: relative;
  text-align: center;
  letter-spacing: 2rpx;
}

.article-title::before {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -3rpx;
  width: 80rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #84A9DD 0%, #5B7BB8 100%);
  transform: translateX(-50%);
}

.article-content {
  padding-left: 30rpx;
}

.paragraph {
  font-size: 30rpx;
  color: #333333;
  line-height: 48rpx;
  margin-bottom: 24rpx;
  text-align: justify;
  position: relative;
  padding-left: 0;
  padding-right: 20rpx;
  letter-spacing: 0.5rpx;
}

.paragraph::before {
  content: '';
  position: absolute;
  left: 0;
  color: #84A9DD;
  font-weight: bold;
  font-size: 36rpx;
  top: -2rpx;
}

.contact-section {
  background: linear-gradient(135deg, #F8F4E8 0%, #F0E6D2 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  border-left: 8rpx solid #AC886D;
  box-shadow: 0 4rpx 16rpx rgba(172, 136, 109, 0.15);
  margin-top: 40rpx;
}

.contact-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #AC886D;
  text-align: center;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.contact-content {
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #5D4E37;
  font-weight: 600;
  min-width: 120rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #AC886D;
  font-weight: 500;
}

.contact-note {
  background-color: rgba(255, 255, 255, 0.8);
  padding: 25rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #AC886D;
}

.contact-note text {
  font-size: 28rpx;
  color: #5D4E37;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.note-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 40rpx;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

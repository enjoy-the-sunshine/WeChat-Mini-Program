.page {
  background-color: #fef8e7;
  padding: 20rpx;
}

/* 通用阴影效果 */
.shadow {
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.08);
}

/* 日历卡片 */
.calendar-container {
  background: #fff;
  border-radius: 26rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 32rpx;
  color: #5b4b3b;
}

.arrow {
  font-size: 42rpx;
  padding: 0 20rpx;
  color: #d0bfae;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-top: 10rpx;
  font-weight: bold;
  color: #a89984;
}

.weekday {
  text-align: center;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-top: 14rpx;
  row-gap: 18rpx;
}

.day {
  text-align: center;
  font-size: 28rpx;
  padding: 12rpx 0;
  border-radius: 50%;
  width: 65rpx;   /* 固定宽度 */
  height: 40rpx;  /* 固定高度 */
  line-height: 37rpx; /* 让数字居中 */
}

.other-month {
  color: #ccc;
}

.selected {
  background-color: #3b82f6;
  color: white !important;
}

/* 咖啡因统计框 */
.caffeine-summary {
  background: #f3d29a;
  border-radius: 26rpx;
  padding: 20rpx;
  margin-top: 40rpx;
}

.summary-date {
  font-size: 45rpx;
  color:black;
  display: block;
  margin-bottom: 10rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.summary-title {
  text-decoration: underline;
  font-size: 40rpx;
  color: #797979;
}

.summary-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #8a5a2c;
}

.unit {
  font-size: 50rpx;
}

/* 饮品记录 */
.drink-record {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
}

.drink-icon {
  width: 60rpx;
  height: 60rpx;
}

.drink-info {
  margin-left: 20rpx;
  flex-grow: 1;
}

.drink-name {
  font-size: 40rpx;
  font-weight: bold;
  color: black；
}

.drink-time {
  font-size: 24rpx;
  color: #909399;
}

.drink-caffeine {
  font-size: 40rpx;
  color: #8a5a2c;
}

.record-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 10rpx;
}

/* 按钮组 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

button {
  border: none;
}

.btn-add {
  background: #AC886D;
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 0;
  flex: 1;
  margin-right:20rpx;
  font-size: 28rpx;
}

.btn-state {
  background:#E7F1F6;
  color:black;
  border-radius: 25rpx;
  padding: 20rpx 0;
  flex: 1;
  margin-left: 10rpx;
  font-size: 28rpx;
}

/* 底部小熊插图 */
.bear-container {
  margin-top: 40rpx;
  text-align: center;
}

.bear-img {
  width: 100%;
  margin-bottom: 100rpx;
}
/* 弹窗遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
}

/* 弹窗容器 */
.popup-container {
  background: #fdf8e3;
  width: 100%;
  border-top-left-radius: 26rpx;
  border-top-right-radius: 26rpx;
  padding: 40rpx 20rpx;
  position: relative;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 关闭按钮 */
.popup-close-btn {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 标题 */
.popup-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

/* 字段行 */
.popup-field {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 30rpx;
  padding: 14rpx 20rpx;
  margin-bottom: 16rpx;
}

.popup-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 14rpx;
}

.popup-label {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
}

.popup-value {
  margin-left: auto;
  padding: 4rpx 16rpx;
  background: #e0e0e0;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #555;
}

/* 输入框咖啡因行 */
.popup-input-row {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 30rpx;
  padding: 14rpx 20rpx;
}

.popup-input {
  flex: 1;
  border: none;
  font-size: 28rpx;
}

.popup-unit {
  font-size: 26rpx;
  color: #777;
}

/* 删除按钮 */
.popup-delete {
  color: red;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}
/* 输入框（白色背景） */
.popup-input-inline {
  margin-left: auto;
  background: white;
  border-radius: 20rpx;
  padding: 6rpx 14rpx;
  font-size: 26rpx;
  color: #333;
}

/* 无背景的字段标题行 */
.popup-field-nobg {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx 0;
}

.popup-input-row-nobg {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.popup-input-row-nobg .popup-input {
  flex: 1;
  border: none;
  font-size: 28rpx;
  background: transparent;
}

/* 删除按钮带白色方框 */
.popup-delete-box {
  background: white;
  border-radius: 30rpx;
  padding: 14rpx;
  margin-top: 20rpx;
  text-align: center;
}

.popup-delete-text {
  color: red;
  font-size: 28rpx;
}
/* 外层灰色容器 */
.popup-field-outer {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.popup-input-container {
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 6rpx;
  display: flex;
  align-items: center;
  margin-left: auto;
}

.popup-input-inner {
  background: white;
  border-radius: 16rpx;
  padding: 6rpx 12rpx;
  font-size: 26rpx;
  flex: 1;
  border: none;
}

.popup-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 删除按钮内层 */
.delete-inner {
  color: red;
  text-align: center;
  font-size: 28rpx;
}
/* 白色外层容器 */
.popup-field {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 14rpx 20rpx;
  margin-bottom: 16rpx;
}

.popup-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 14rpx;
}

.popup-label {
  font-size: 28rpx;
  color: #333;
  margin-right: auto;
}

/* 灰色背景输入框 */
.popup-inner-input {
  background: #D7D7D7;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  width: 220rpx;
}

.popup-inner-input input {
  border: none;
  background: transparent;
  font-size: 26rpx;
  color: #333;
}

/* 咖啡因固定值 */
.popup-caffeine-display {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.popup-caffeine-value {
  font-size: 26rpx;
  background: #D7D7D7;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.popup-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 删除按钮 */
.delete-btn {
  justify-content: center;
  color: #d8001b;
  font-size: 32rpx;
}

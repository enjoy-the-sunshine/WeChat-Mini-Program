<view class="container">

<!-- 个性化饮品设置卡片 -->
<view class="card drink-card">
  <view class="card-header">
    <image class="card-icon" src="../images/drink-icon.png"></image>
    <text class="card-title">个性化饮品设置</text>
  </view>

  <view class="form-item">
    <text class="label">名称</text>
    <input class="input" placeholder="请输入饮品名称"
      value="{{drinkName}}" bindinput="onNameInput" maxlength="20" type="text" />
  </view>

  <view class="form-item">
    <text class="label">图标</text>
    <view class="picker" bindtap="openIconPicker">
      <text>选择图标</text>
    </view>
  </view>

  <view class="form-item">
    <text class="label">杯型</text>
    <picker mode="selector" range="{{cupSizes}}" value="{{cupSizes.indexOf(cupSizeValue)}}" bindchange="onCupSizeChange" class="picker-container">
      <view class="picker-view">
        <text>{{cupSizeValue}}</text>
      </view>
    </picker>
  </view>
</view>

<!-- 小熊插画 -->
<image src="../images/bear_lie.png" class="bear-img" mode="aspectFit" />

<!-- 咖啡因含量卡片 -->
<view class="card caffeine-card">
  <view class="card-header">
    <image class="card-icon" src="../images/caffeine-icon.png"></image>
    <text class="card-title">咖啡因含量</text>
  </view>

  <view class="form-item">
    <text class="label">含有咖啡因</text>
    <view class="input-unit-wrap">
      <input class="input small" placeholder="0" value="{{caffeineContent}}" bindinput="onCaffeineInput" type="number" min="0" max="1000" />
      <text class="unit">mg</text>
    </view>
  </view>

  <view class="form-item clickable" bindtap="openDetail">
    <text class="label">饮用后体内含量</text>
    <text>详细信息</text>
  </view>

  <view class="form-item">
    <text class="label">预计可入睡时间</text>
    <picker mode="time" start="00:00" end="23:59" value="{{sleepTime}}" bindchange="onSleepTimeChange" class="picker-container">
      <view class="picker-view">
        <text>{{sleepTime ? sleepTime : '请选择时间'}}</text>
      </view>
    </picker>
  </view>
</view>

<!-- 操作按钮 -->
<view class="btn-group">
  <button class="btn confirm" bindtap="confirmSetting" hover-class="btn-hover">确认</button>
  <button class="btn cancel" bindtap="cancelSetting" hover-class="btn-hover">取消</button>
</view>
</view>

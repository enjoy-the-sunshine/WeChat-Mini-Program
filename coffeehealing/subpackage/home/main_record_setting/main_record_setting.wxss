page {
  background-color: #fdf7e5;
}

.setting-item {
  background-color: #fff;
  border-radius: 36rpx;
  margin: 24rpx 20rpx 0 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 图标 */
.icon {
  width: 60rpx;
  height: 60rpx;
}

/* 文字右移，留图标空间 */
.shifted-text {
  margin-left: 20rpx;
}

/* 第一块布局 */
.first-item {
  display: flex;
  align-items: center;
}
.first-item .info {
  flex: 1;
}
.time-badge {
  background-color: #d19a74;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
}

/* 2-4块布局 */
.with-divider .top-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.text-area {
  display: flex;
  flex-direction: column;
}
.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 分割线与文字对齐 */
.shifted-divider {
  margin-left: 80rpx; /* 图标宽度60 + 左间距20 */
  margin-right: 0;
  height: 1px;
  background-color: #ddd;
}

/* 数值输入行 */
.value-row {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.value-input {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  flex: 1;
}
.unit {
  position: absolute;
  right: 0;
  font-size: 24rpx;
  color: #999;
}

/* 恢复按钮 */
.reset-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 20rpx;
  background-color: #fff;
  border-radius: 36rpx;
  height: 72rpx;
  color: #c67c59;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 弹窗 */
.popup-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.popup {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  text-align: center;
  padding: 40rpx 0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.25s ease;
}
@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
.popup-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
.popup-btn {
  width: 100%;
  padding: 20rpx 0;
  border: none;
  font-size: 28rpx;
}
.confirm {
  background-color: #c67c59;
  color: #fff;
  margin-bottom: 20rpx;
}
.cancel {
  background-color: #f5f5f5;
  color: #333;
}

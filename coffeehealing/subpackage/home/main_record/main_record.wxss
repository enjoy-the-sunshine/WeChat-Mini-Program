.page {
  padding: 20rpx;
  padding-bottom: 160rpx; /* 为底部按钮留空间 */
  background-color: #fdf8e3; /* 接近参考图的淡黄色背景 */
}

/* 通用卡片样式 */
.card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 32rpx; /* 内边距加大 */
  margin: 40rpx 30rpx 50rpx 30rpx;
  min-height: 240rpx; /* 统一高度增大 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 卡片1 */
.card-body {
  justify-content: space-between;
}

/* 圆圈睡眠水平 */
.caffeine-circle {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border: 4rpx solid #ccc;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}
.caffeine-circle .fill {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f7a05a;
}
.sleep-line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: #888;
}
.sleep-label {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  top: 45%;
}

/* 卡片1文字区域 */
.card-body-info {
  flex: 1;
  padding: 0 20rpx;
  position: relative;
}
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.card-desc {
  font-size: 24rpx;
  color: #888;
}
.level-badge {
  position: absolute;
  top: 0;
  right: 0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
}
.level-low { background-color: #d3a67a; }
.level-mid { background-color: orange; }
.level-high { background-color: red; }
.value-row {
  display: flex;
  align-items: baseline;
  margin-top: 20rpx;
  gap: 4rpx;
}
.caffeine-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #a6653f;
}
.unit {
  font-size: 24rpx;
  color: #a6653f;
}

/* 熊图片 第一张卡片专用 */
.bear-img1 {
  width: 240rpx;   /* 放大图片 */
  height: auto;
  flex-shrink: 0;
  align-self: flex-end; /* 对齐到底部 */
}

/* 卡片2 */
.card-daily {
  justify-content: space-between;
}
.card-daily-info {
  flex: 1;
}
.today-caffeine {
  display: flex;
  align-items: baseline;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.bold { font-weight: bold; }
.brown { color: #a6653f; }
.slash { margin: 0 4rpx; }
.progress {
  height: 12rpx;
  background-color: #eee;
  border-radius: 6rpx;
  margin-top: 10rpx;
  overflow: hidden;
}
.progress-bar {
  height: 100%;
  background-color: #a6653f;
}
.bear-circle {
  width: 140rpx;
  flex-shrink: 0;
}

/* 卡片3 */
.orange-card {
  background-color: #eac5ab;
  justify-content: space-between;
}
.vitality-info {
  flex: 1;
  color: #fff;
}
.grey { color: #fff; }
.timer-label {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.timer-value {
  font-size: 48rpx;
  font-weight: bold;
}
.progress.light {
  background-color: rgba(255,255,255,0.5);
}
.progress-bar.light {
  background-color: #fff;
}
.small-desc {
  font-size: 20rpx;
  margin-top: 10rpx;
}
.bear-img {
  width: 200rpx;
  flex-shrink: 0;
}

/* 设置区域 悬浮底部 */
.settings {
  position: fixed;
  bottom: 200rpx; /* 距离屏幕底部 40rpx */
  left: 20rpx;   /* 与屏幕左边留间距 */
  right: 20rpx;  /* 与屏幕右边留间距 */
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1); /* 阴影抬升感 */
  z-index: 1000;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.settings-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
}
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

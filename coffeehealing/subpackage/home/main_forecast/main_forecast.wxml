<view class="page">

<!-- 第一块：体内咖啡因 -->
<view class="section-title">体内咖啡因代谢实时预测</view>
<view class="card chart-card" style="height: 500rpx; display: block; box-sizing: border-box">
  <ec-canvas id="chart1" canvas-id="chart1-canvas" ec="{{ ec1 }}"></ec-canvas>
</view>

<!-- 第二块：测试咖啡因 -->
<view class="section-title">测试咖啡因代谢预测</view>
<view class="card chart-card" style="height: 508rpx; display: block; box-sizing: border-box">
  <ec-canvas id="chart2" canvas-id="chart2-canvas" ec="{{ ec2 }}"></ec-canvas>
</view>

<!-- 第三块：添加按钮 -->
<view class="action-btn" bindtap="addTestDrink" style="position: relative; left: 0rpx; top: -12rpx">
  <text class="plus">+</text>
  <text class="label">添加测试饮品</text>
  <text class="arrow">></text>
</view>

</view>

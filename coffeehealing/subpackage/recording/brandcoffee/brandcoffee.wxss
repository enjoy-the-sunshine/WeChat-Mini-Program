/* pages/brandcoffee/brandcoffee.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F0E6;
  padding: 0;
  box-sizing: border-box;
}

/* 顶部导航 */
.nav-header {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #F5F0E6;
  border-bottom: 1rpx solid #D7CEC7;
}

.nav-back {
  margin-right: 30rpx;
  padding: 10rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-back:active {
  background: rgba(139, 90, 43, 0.1);
  transform: scale(0.95);
}

.back-icon {
  font-size: 40rpx;
  color: #8B5A2B;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

/* 品牌卡片 */
.brand-card {
  background: white;
  border-radius: 24rpx;
  margin: 30rpx 40rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.1);
  border: 1rpx solid #D7CEC7;
}

.brand-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.brand-logo-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 18rpx;
  background: #F5F0E6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  object-fit: contain;
}

.brand-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.divider {
  border-bottom: 1rpx solid #D7CEC7;
  margin: 24rpx 0;
}

/* 饮品列表项 */
.drink-item {
  padding: 24rpx 20rpx;
  border-radius: 18rpx;
  transition: all 0.2s ease;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.drink-item:active {
  background-color: rgba(193, 154, 107, 0.05);
  transform: scale(0.98);
}

.drink-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.drink-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.drink-icon-container {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #F5F0E6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border: 1rpx solid #e8e0c8;
}

.drink-icon {
  font-size: 28rpx;
  color: #8B5A2B;
}

.drink-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.caffeine-info {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.caffeine-item {
  font-size: 26rpx;
  color: #666;
  background: transparent;
  padding: 0;
  border-radius: 0;
  white-space: nowrap;
  font-weight: 400;
  text-align: right;
}

/* 饮品操作按钮 */
.drink-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

/* 收藏按钮 */
.favorite-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(193, 154, 107, 0.1);
  border: 1rpx solid rgba(193, 154, 107, 0.3);
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(193, 154, 107, 0.2);
}

.favorite-icon {
  font-size: 32rpx;
  color: #c4a08a;
  transition: all 0.3s ease;
}

.favorite-btn.favorited {
  background: rgba(193, 154, 107, 0.2);
  border-color: #C19A6B;
}

.favorite-btn.favorited .favorite-icon {
  color: #C19A6B;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  flex: 1;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
  color: #AC886D;
}

.empty-text {
  font-size: 28rpx;
  color: #8b6f5a;
  font-weight: 400;
}


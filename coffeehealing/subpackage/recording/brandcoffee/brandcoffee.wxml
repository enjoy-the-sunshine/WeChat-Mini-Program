<view class="container">
  <!-- 顶部导航 -->
  <view class="nav-header">
    <view class="nav-back" bindtap="goBack">
      <text class="back-icon">←</text>
    </view>
    <text class="nav-title">{{brandName}}饮品咖啡因含量</text>
  </view>

  <!-- 品牌信息卡片 -->
  <view class="brand-card">
    <view class="brand-header">
      <view class="brand-logo-container">
        <image class="brand-logo" src="{{brandLogoUrl}}" mode="aspectFit"></image>
      </view>
      <text class="brand-name">{{brandName}}</text>
    </view>
    
    <view class="divider"></view>
    
    <!-- 饮品列表 -->
    <view wx:for="{{filteredList}}" wx:key="name" class="drink-item">
      <view class="drink-content">
        <view class="drink-info">
          <view class="drink-icon-container">
            <text class="drink-icon">☕</text>
          </view>
          <text class="drink-name">{{item.name}}</text>
        </view>
        <view class="caffeine-info">
          <text wx:if="{{item.small || item.medium || item.large}}" class="caffeine-item">
            <text wx:if="{{item.small}}">小杯: {{item.small}}mg</text>
            <text wx:if="{{item.small && item.medium}}"> </text>
            <text wx:if="{{item.medium}}">中杯: {{item.medium}}mg</text>
            <text wx:if="{{(item.small || item.medium) && item.large}}"> </text>
            <text wx:if="{{item.large}}">大杯: {{item.large}}mg</text>
          </text>
          <text wx:if="{{!item.small && !item.medium && !item.large}}" class="caffeine-item">{{item.caffeine || 0}}mg</text>
        </view>
      </view>
      <view class="drink-actions">
        <view class="favorite-btn {{item.isFavorite ? 'favorited' : ''}}" 
              catchtap="toggleFavorite" 
              data-drink="{{item}}">
          <text class="favorite-icon">{{item.isFavorite ? '★' : '☆'}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{filteredList.length === 0}}" class="empty-state">
    <text class="empty-icon">📭</text>
    <text class="empty-text">暂无饮品数据</text>
  </view>
</view>

<view class="container">

<!-- 头像与等级 -->
<view class="header">
  <image class="avatar" src="{{userInfo.avatarUrl}}" alt="用户头像" />
  <view class="user-info">
    <text class="nickname">{{userInfo.nickname}}</text>
    <text class="level">LEVEL. {{userInfo.level}}</text>
  </view>

  <view class="progress">
    <view class="progress-bar" style="width: 552rpx;"></view>
  </view>

  <text class="points">距离成为咖啡大师还需 {{userInfo.pointsNeeded}} 积分</text>
</view>

<!-- 菜单 -->
<view class="menu">
  <view class="menu-item" bindtap="navigateToProfile">
    <view style="display: flex; align-items: center;">
      <image src="../images/icon-profile.png" class="icon" alt="个人资料图标" />
      <text class="menu-text">个人资料</text>
    </view>
    <image src="../images/coffeebean.png" class="icon" alt="咖啡豆图标" />
  </view>

  <view class="menu-item" bindtap="navigateToSettings">
    <view style="display: flex; align-items: center;">
      <image src="../images/icon-settings.png" class="icon" alt="设置图标" />
      <text class="menu-text">设置</text>
    </view>
    <image src="../images/coffeebean.png" class="icon" alt="咖啡豆图标" />
  </view>

  <view class="menu-item" bindtap="navigateToFeedback">
    <view style="display: flex; align-items: center;">
      <image src="../images/icon-feedback.png" class="icon" alt="问题反馈图标" />
      <text class="menu-text">问题反馈</text>
    </view>
    <image src="../images/coffeebean.png" class="icon" alt="咖啡豆图标" />
  </view>
</view>

<!-- 底部插画 -->
<image class="footer-image" src="../images/bear_grass2.png" alt="底部插画" />

</view>

.container {
  background-color: #fdf8e3;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx; /* 和 profile 一样四周留间距 */
  box-sizing: border-box;
}

/* 每个模块之间间距更大 */
.section {
  margin-bottom: 50rpx;
}

/* 标题区 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 53.85rpx;
  font-weight: bold;
  color: #98592C;
  margin-bottom: 30rpx;
  padding: 0 20rpx; /* 左右内边距让文字和图标离屏幕边缘有空隙 */
  font-family: 'Source Han Sans', sans-serif;
}

.section-title .icon {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx; /* 保证文字和图标之间有空隙 */
}

/* 卡片 */
.card {
  width: 80%; /* 和 profile 一样 */
  background-color: rgba(172, 136, 109, 0.22);
  border-radius: 50rpx;
  margin: 0 auto 50rpx; /* 上下 50rpx 间距，左右居中 */
  padding: 30rpx; /* 内边距加大 */
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  font-family: 'Microsoft YaHei', sans-serif;
  font-size: 30rpx;
}

/* 卡片条目 */
.card-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 0; /* 与 profile 保持一致的高度和间隔 */
  min-height: 100rpx;
}

.card-item-right {
  display: flex;
  align-items: center;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.1);
  width: 100%;
  margin: 10rpx 0;
}

/* 底部图片 */
.footer-image {
  width: 80%;
  height: 480rpx;
  margin-top: auto;
  margin: auto auto 0; /* 上左右自动，下0，保证居中且贴底 */
}

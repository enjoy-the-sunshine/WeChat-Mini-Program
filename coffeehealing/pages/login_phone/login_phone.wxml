<!--pages/login_phone/login_phone.wxml-->
<view class="container">
  <image class="bear-fly" src="../images/bear_fly.png" mode="widthFix"
    style="width: 419rpx; height: 421rpx; display: block; box-sizing: border-box" />

  <text class="title" style="font-size: 60rpx; font-weight: bold">CoffeeHealing~</text>

  <!-- 手机号输入 -->
  <input
    class="input"
    style="width: 580rpx; display: block; box-sizing: border-box"
    placeholder="手机号"
    maxlength="11"
    type="number"
    bindinput="onPhoneInput"
    value="{{phone}}"
  />

  <!-- 密码输入 -->
  <view style="position: relative;">
    <input
      class="input"
      style="width: 580rpx; display: block; box-sizing: border-box"
      placeholder="密码"
      maxlength="12"
      password="{{!showPassword}}"
      bindinput="onPwdInput"
      value="{{password}}"
    />
    <image
      class="eye"
      src="{{showPassword ? '../images/eye_open.png' : '../images/eye_close.png'}}"
      bindtap="togglePassword"
      style="position: absolute; left: 517rpx; top: 45rpx"
    />
  </view>

  <!-- 提示导航 -->
  <view class="tips">
    <navigator url="/pages/register/register" style="position: relative; left: -23rpx; top: 0rpx">
      还没有账号？去注册
    </navigator>
    <navigator url="" style="position: relative; left: 32rpx; top: 0rpx">
      忘记密码
    </navigator>
  </view>

  <!-- 登录按钮 -->
  <button class="btn" bindtap="onLogin">一键登录</button>

  <!-- 其他登录方式 -->
  <navigator url="/pages/login_wechat/login_wechat" class="other" style="position: relative; left: 0rpx; top: -34rpx">
    其他登陆方式
  </navigator>
  <image class="bear-lie" src="../images/bear_lie.png" mode="widthFix"
    style="width: 271rpx; height: 206rpx; display: block; box-sizing: border-box" />

  <navigator url="/pages/register/help/help" class="problem">登录遇到问题?</navigator>
</view>

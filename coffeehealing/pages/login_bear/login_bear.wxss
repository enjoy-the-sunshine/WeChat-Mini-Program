/* pages/login_bear/login_bear.wxss */
.container {
  background: linear-gradient(135deg, #FFF9F2 0%, #FDF8E3 50%, #FFF5E6 100%);
  min-height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 182, 193, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.container::after {
  content: '';
  position: absolute;
  bottom: 100rpx;
  left: -30rpx;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(173, 216, 230, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(5deg); }
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 50rpx;
  background: linear-gradient(135deg, rgba(255, 249, 242, 0.9) 0%, rgba(253, 248, 227, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 10;
}

.nav-left .time {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.nav-center .app-title {
  font-size: 36rpx;
  color: #8B7355;
  font-weight: bold;
  font-family: cursive, serif;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  animation: gentleGlow 3s ease-in-out infinite;
}

@keyframes gentleGlow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

.nav-right {
  display: flex;
  gap: 20rpx;
}

.nav-icon {
  font-size: 24rpx;
  color: #333;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}

/* 信息提示区域 */
.info-bubble {
  background: linear-gradient(135deg, #c38354 0%, #f3ceb3 50%, #f9c3b6 100%);
  margin: 60rpx 50rpx;
  padding: 60rpx 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 12rpx 32rpx rgba(255, 182, 193, 0.2);
  text-align: center;
  position: relative;  /* Combined from inline style */
  left: 0rpx;          /* Combined from inline style */
  top: 120rpx;          /* Combined from inline style */
  animation: bubbleFloat 4s ease-in-out infinite;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}



.info-bubble::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #FFE5F1;
}

@keyframes bubbleFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

.main-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 30rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 36rpx;
  color: #A67B5B;
  line-height: 1.6;
  font-weight: 500;
}

/* 小熊插图 */
.bear-container {
  display: flex;
  justify-content: center;
  margin: 60rpx 0;
  padding: 0 50rpx;
  position: relative;
}

.bear-image {
  width: 450rpx;
  height: 450rpx;
  animation: bearBounce 3s ease-in-out infinite;
}

@keyframes bearBounce {
  0%, 100% { transform: translateY(0px) scale(1); }
  50% { transform: translateY(-10px) scale(1.02); }
}

/* 装饰元素 */
.decoration-heart {
  position: absolute;
  top: -20rpx;
  right: 50rpx;
  font-size: 40rpx;
  animation: heartBeat 2s ease-in-out infinite;
}

.decoration-star {
  position: absolute;
  bottom: -20rpx;
  left: 50rpx;
  font-size: 36rpx;
  animation: starTwinkle 3s ease-in-out infinite;
}

@keyframes heartBeat {
  0%, 100% { transform: scale(1) rotate(0deg); }
  25% { transform: scale(1.2) rotate(-5deg); }
  50% { transform: scale(1.1) rotate(5deg); }
  75% { transform: scale(1.3) rotate(-3deg); }
}

@keyframes starTwinkle {
  0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
  50% { transform: scale(1.3) rotate(180deg); opacity: 0.7; }
}

/* 输入框 */
.input-container {
  margin: 60rpx 50rpx;
  position: relative;
}

.name-input {
  width: 100%;
  height: 110rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF8F0 100%);
  border: 3rpx solid #FFB6C1;
  border-radius: 25rpx;
  padding: 0 50rpx;
  font-size: 36rpx;
  color: #8B7355;
  box-sizing: border-box;
  box-shadow: 0 8rpx 24rpx rgba(255, 182, 193, 0.15);
  transition: all 0.3s ease;
}

.name-input:focus {
  border-color: #FF69B4;
  box-shadow: 0 12rpx 32rpx rgba(255, 105, 180, 0.25);
  transform: translateY(-2rpx);
}

.name-input::placeholder {
  color: #DDA0DD;
  font-style: italic;
}

/* 按钮区域 */
.button-container {
  display: flex;
  justify-content: space-between;
  margin: 70rpx 50rpx;
  gap: 40rpx;
}

.btn {
  flex: 1;
  height: 110rpx;
  border-radius: 25rpx;
  font-size: 38rpx;
  font-weight: bold;
  border: none;
  outline: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.confirm-btn {
  background: linear-gradient(135deg, #f9c3b6 0%, #e56568 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(255, 182, 193, 0.4);
  animation: confirmPulse 2s ease-in-out infinite;
}

.confirm-btn:active {
  transform: translateY(3rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.4);
}


.skip-btn {
  background: linear-gradient(135deg, #f3ceb3 0%, #f9c3b6 100%);
  color: #8B7355;
  box-shadow: 0 8rpx 24rpx rgba(221, 160, 221, 0.3);
}

.skip-btn:active {
  transform: translateY(3rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(221, 160, 221, 0.3);
}

@keyframes confirmPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}


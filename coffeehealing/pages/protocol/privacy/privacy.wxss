/* pages/protocol/privacy/privacy.wxss */
.container {
  background-color: #FDF8E3;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.content {
  width: 100%;
  max-width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 50rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.intro {
  background: linear-gradient(135deg, #E8F2FF 0%, #D1E7FF 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  border-left: 8rpx solid #84A9DD;
  box-shadow: 0 4rpx 16rpx rgba(132, 169, 221, 0.15);
}

.intro-text {
  font-size: 34rpx;
  color: #2C5AA0;
  line-height: 52rpx;
  font-weight: 600;
  text-align: center;
  letter-spacing: 1rpx;
}

.article {
  margin-bottom: 50rpx;
  padding: 40rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 20rpx;
  border: 1rpx solid #E8E8E8;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.article:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.article-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #84A9DD;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #E8E8E8;
  position: relative;
  text-align: center;
  letter-spacing: 2rpx;
}

.article-title::before {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -3rpx;
  width: 80rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #84A9DD 0%, #5B7BB8 100%);
  transform: translateX(-50%);
}

.article-content {
  padding-left: 30rpx;
}

.paragraph {
  font-size: 30rpx;
  color: #333333;
  line-height: 48rpx;
  margin-bottom: 24rpx;
  text-align: justify;
  position: relative;
  padding-left: 0;
  padding-right: 20rpx;
  letter-spacing: 0.5rpx;
}

.paragraph::before {
  content: '';
  position: absolute;
  left: 0;
  color: #84A9DD;
  font-weight: bold;
  font-size: 36rpx;
  top: -2rpx;
}

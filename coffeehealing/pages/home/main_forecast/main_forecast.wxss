page {
  background-color: #fdf5e6;
}

.page {
  padding: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #9b5735;
  margin: 12px 0 4px;
}

.card {
  background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  padding: 12px;
  margin-bottom: 20px;
}

.chart-card {
  height: 260px;
}

.action-btn {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.plus {
  font-size: 20px;
  font-weight: bold;
  color: #9b5735;
  margin-right: 8px;
}

.label {
  flex: 1;
  font-size: 16px;
  color: #9b5735;
}

.arrow {
  font-size: 18px;
  color: #9b5735;
}

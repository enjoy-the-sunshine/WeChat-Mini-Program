<view class="page">

<!-- 顶部咖啡因卡片 -->
<view class="card caffeine-card">
  <view class="card-header" bindtap="goToSecond">
    <image 
      class="arrow-icon" 
      src="../images/arrow_right.png" 
      mode="widthFix"
    ></image>
  </view>

  <view class="caffeine-info">
    <image class="bear-img" src="../images/bear_1.png" mode="widthFix"></image>
    <view class="caffeine-text">
      <view class="caffeine-item">
        <text class="label">体内实时咖啡因</text>
        <text class="value">{{ caffeineNow }}mg</text>
      </view>
      <view class="caffeine-item">
        <text class="label">今日总计</text>
        <text class="value">{{ caffeineTotal }}mg</text>
      </view>
    </view>
  </view>

  <view class="energy-time">
    <image class="bear-face" src="../images/bear_face.png" mode="widthFix"></image>
    <view class="energy-text">
      <text class="title">元气时刻</text>
      <text class="subtitle">
        预计提神至 <text class="time">{{ energyTime }}</text>
      </text>
    </view>
  </view>
</view>

<!-- 预测标题方框 -->
<view class="forecast-title-box" bindtap="goToThird">
  <text class="forecast-title-text">体内咖啡因代谢实时预测</text>
  <image 
    class="arrow-icon"
    src="../images/arrow_right.png"
    mode="widthFix"
  ></image>
</view>


<!-- 圆形添加按钮 -->
<view class="circle-btn" bindtap="goToBrandSelect">
  <text class="circle-plus">+</text>
</view>

</view>

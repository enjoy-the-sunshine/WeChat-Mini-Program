<view class="page">
  <!-- 顶部小熊插画 -->
  <view class="bear-illustration-container">
    <image 
      class="bear-illustration" 
      src="../images/bear_fly.png" 
      mode="widthFix"
    ></image>
  </view>

  <!-- 咖啡因数据卡片 -->
  <view class="card caffeine-card">
    <view class="card-header" bindtap="goToSecond">
      <image 
        class="arrow-icon" 
        src="../images/arrow_right.png" 
        mode="widthFix"
      ></image>
    </view>

    <view class="caffeine-title">
      <text class="title-text">咖啡因追踪</text>
    </view>
    
    <view class="caffeine-grid">
      <view class="caffeine-item">
        <text class="label">体内实时咖啡因</text>
        <text class="value">{{ caffeineNow }}<text class="unit">mg</text></text>
      </view>
      <view class="caffeine-item">
        <text class="label">今日总计</text>
        <text class="value">{{ caffeineTotal }}<text class="unit">mg</text></text>
      </view>
    </view>

    <view class="energy-time" style="height: 149rpx; display: block; box-sizing: border-box">
      <text class="energy-title" style="position: relative; left: -9rpx; top: -8rpx">元气时刻</text>
      <text class="energy-subtitle">
        预计提神至 <text class="highlight">{{ energyTime }}</text>
      </text>
    </view>
  </view>

  <!-- 代谢预测图表 -->
  <view class="card forecast-card" bindtap="goToThird">
    <view class="card-header">
      <image 
        class="arrow-icon"
        src="../images/arrow_right.png"
        mode="widthFix"
      ></image>
    </view>
    
    <view class="forecast-title">
      <text class="title-text">代谢预测</text>
    </view>
    
    
  </view>

  <!-- 圆形添加按钮 -->
  <view class="circle-btn" bindtap="goToBrandSelect">
    <text class="circle-plus">+</text>
  </view>
</view>

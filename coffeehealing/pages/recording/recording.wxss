/* 折叠提示卡片 */
.fold-card {
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 20rpx;
  width: 600rpx;
  margin: 0 auto 30rpx auto; /* 统一底部间距 */
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); /* 使用更自然的缓动函数 */
  border: 2rpx solid #e9ecef;
  transform: translateY(0);
  opacity: 1;
}

.fold-card:hover {
  background: #e9ecef;
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 展开状态下的折叠卡片样式 */
.fold-card.expanded {
  background: #e3f2fd;
  border-color: #2196f3;
  margin-top: 20rpx; /* 展开状态下调整顶部间距 */
}

.fold-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.fold-text {
  font-size: 32rpx;
  color: #6c757d;
  font-weight: 500;
  transition: all 0.3s ease;
}

/* 展开状态下的文字颜色 */
.fold-card.expanded .fold-text {
  color: #1976d2;
  font-weight: 600;
}

.fold-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1); /* 使用更自然的缓动函数 */
}

.fold-icon.expanded {
  transform: rotate(180deg);
}

.arrow-down {
  font-size: 24rpx;
  color: #6c757d;
  transition: color 0.3s ease;
}

/* 展开状态下的箭头颜色 */
.fold-card.expanded .arrow-down {
  color: #1976d2;
}

/* 折叠的记录容器 */
.folded-records {
  overflow: hidden;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); /* 使用更自然的缓动函数 */
  max-height: 0;
  opacity: 0;
  transform: translateY(-20rpx);
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 展开状态 */
.folded-records.expanded {
  max-height: 1000rpx; /* 足够的高度来显示所有记录 */
  opacity: 1;
  transform: translateY(0);
}

/* 折叠记录中的饮品记录特殊样式 */
.folded-records .drink-record {
  animation: slideInRecord 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  animation-fill-mode: both;
  margin: 0 auto 30rpx auto; /* 确保间距一致 */
  transition: all 0.3s ease; /* 添加过渡效果 */
}

/* 为每个折叠记录添加延迟动画 */
.folded-records .drink-record:nth-child(1) { animation-delay: 0.1s; }
.folded-records .drink-record:nth-child(2) { animation-delay: 0.2s; }
.folded-records .drink-record:nth-child(3) { animation-delay: 0.3s; }
.folded-records .drink-record:nth-child(4) { animation-delay: 0.4s; }
.folded-records .drink-record:nth-child(5) { animation-delay: 0.5s; }

/* 收起动画 */
.folded-records:not(.expanded) .drink-record {
  animation: slideOutRecord 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes slideInRecord {
  from { 
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideOutRecord {
  from { 
    opacity: 1;
    transform: translateY(0);
  }
  to { 
    opacity: 0;
    transform: translateY(-20rpx);
  }
}



/* 日历卡片 */
.calendar-container {
  background: #fff;
  border-radius: 26rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  justify-content: center;
  width: 600rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 35rpx;
  color: #5b4b3b;
}

.arrow {
  font-size: 42rpx;
  padding: 0 20rpx;
  color: #d0bfae;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-top: 10rpx;
  font-weight: bold;
  color: #a89984;
  justify-items: center; /* 确保每列内容居中 */
}

.weekday {
  text-align: center;
  font-size: 32rpx; /* 增大星期字号，提高可读性 */
  padding: 8rpx 0; /* 适当调整padding */
  width: 70rpx; /* 稍微增加宽度 */
  height: 45rpx; /* 稍微增加高度 */
  line-height: 45rpx; /* 调整行高 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-top: 14rpx;
  row-gap: 18rpx;
  justify-items: center; /* 确保每列内容居中 */
}

.day {
  text-align: center;
  font-size: 32rpx; /* 增大日期字号，与星期保持一致 */
  padding: 8rpx 0; /* 适当调整padding */
  border-radius: 50%;
  width: 70rpx;   /* 稍微增加宽度，与星期保持一致 */
  height: 45rpx;  /* 稍微增加高度，与星期保持一致 */
  line-height: 45rpx; /* 调整行高 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  transition: all 0.2s ease; /* 添加过渡效果 */
}

.day:hover {
  background-color: #f0f0f0; /* 添加悬停效果 */
}

.day.selected:hover {
  background-color: #3b82f6; /* 选中状态的悬停效果 */
}

.other-month {
  color: #ccc;
}

.selected {

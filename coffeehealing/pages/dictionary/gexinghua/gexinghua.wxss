/* 页面背景与字体 */
page {
  background-color: #FAF0D7;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* 容器 */
.container {
  padding: 16px;
  position: relative;
}

/* 卡片通用 */
.card {
  background: #FAF0D7;
  border: 2px solid #D9B382;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 40rpx;
}

/* 第一张卡片往下留更多空隙给小熊 */
.drink-card {
  margin-bottom: 260rpx; /* 再加大，原120rpx */
  margin-top: 50rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.card-icon {
  width: 28px;
  height: 20px;
  margin-right: 8px;
}
.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14px;
}
.label {
  font-size: 14px;
  color: #666;
  flex: 1;
}
.input {
  flex: 2;
  background: #FFF;
  border: 1px solid #E6E6E6;
  border-radius: 6px;
  padding: 6px 4px;
  font-size: 14px;
}
.unit {
  margin-left: 4px;
  color: #999;
  font-size: 14px;
}
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 2;
  background: #FFF;
  border: 1px solid #E6E6E6;
  border-radius: 6px;
  padding: 8px 10px;
  font-size: 14px;
  color: #666;
}

/* 小熊插画放大 */
.bear-img {
  width: 180px;  
  height: 140px;
  position: absolute;
  right: 20px;
  top: 280px;
  z-index: 10;
}

/* 小输入框包裹单位 */
.input-unit-wrap {
  display: flex;
  align-items: center;
}
.input.small {
  width: 270rpx;
  height: 28rpx; /* 高度减小 */
}

.btn-group {
  display: flex;
  justify-content: center;    /* 居中排放 */
  gap: 60rpx;                 /* 按钮之间固定间距 */
  margin: 60rpx 0 20rpx;      /* 不给左右固定margin，这样 gap 才显得明显 */
}

.btn {
  width: 160rpx;              /* 缩窄按钮宽度 */
  padding: 10px 0;
  border-radius: 25px;
  font-size: 15px;
  color: #333;
}

.confirm {
  background: #ac886d;
  color: #FFF;
}
.cancel {
  background: #ac886d;
  color: #FFF;
}

/* 点击态表单项 */
.form-item.clickable {
  cursor: pointer;
}

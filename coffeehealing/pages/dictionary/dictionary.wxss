/* pages/dictionary/dictionary.wxss */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #FDF8E3 0%, #f5f0d8 50%, #e8e0c8 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 悬浮收藏栏和自定义栏 */
.floating-bars {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 100;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.floating-bar {
  background: rgba(172, 136, 109, 0.9);
  padding: 15rpx 20rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(172, 136, 109, 0.3);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(253, 248, 227, 0.3);
}

.floating-bar:active {
  transform: scale(0.95);
  background: rgba(172, 136, 109, 1);
}

.floating-bar.active {
  background: #AC886D;
  box-shadow: 0 6rpx 16rpx rgba(172, 136, 109, 0.4);
}

.bar-icon {
  font-size: 28rpx;
  color: #FDF8E3;
}

.bar-text {
  font-size: 24rpx;
  color: #FDF8E3;
  font-weight: 500;
}

/* 主内容区域 */
.main-content {
  padding: 20rpx;
  padding-top: 120rpx; /* 为悬浮栏留出空间 */
  overflow-y: auto;
  height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #8b6f5a;
  text-shadow: 0 2rpx 4rpx rgba(139, 111, 90, 0.1);
}

/* 品牌卡片网格 */
.brand-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 10rpx;
}

.brand-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.1);
  border: 1rpx solid #D7CEC7;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 200rpx;
}

.brand-card:active {
  transform: translateY(-3rpx);
  box-shadow: 0 5rpx 15rpx rgba(139, 90, 43, 0.15);
}

.card-logo-container {
  width: 100%;
  aspect-ratio: 1;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F0E6;
  border-radius: 12rpx;
  overflow: hidden;
}

.brand-logo {
  width: 75%;
  height: 75%;
  object-fit: contain;
}

.brand-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #8b6f5a;
  text-align: center;
  line-height: 1.2;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  flex: 1;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
  color: #AC886D;
}

.empty-text {
  font-size: 28rpx;
  color: #8b6f5a;
  font-weight: 400;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(139, 111, 90, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #FDF8E3;
  border-radius: 16rpx;
  width: 85%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border: 1rpx solid #d4c4a8;
  box-shadow: 0 8rpx 24rpx rgba(172, 136, 109, 0.2);
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e8e0c8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #AC886D;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #FDF8E3;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #FDF8E3;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(253, 248, 227, 0.2);
}

.modal-close:active {
  background: rgba(253, 248, 227, 0.3);
  transform: scale(0.9);
}

.modal-body {
  padding: 30rpx;
  background: #FDF8E3;
  max-height: 60vh;
  overflow-y: auto;
}

/* 收藏和自定义饮品列表项 */
.favorite-item, .custom-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: #f8f4e8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  border: 1rpx solid #e8e0c8;
  box-shadow: 0 2rpx 8rpx rgba(172, 136, 109, 0.05);
}

.favorite-item:active, .custom-item:active {
  transform: scale(0.98);
  border-color: #AC886D;
  box-shadow: 0 4rpx 12rpx rgba(172, 136, 109, 0.1);
}

.drink-icon {
  font-size: 40rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FDF8E3;
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.1);
  border: 1rpx solid #e8e0c8;
}

.drink-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.drink-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #8b6f5a;
  margin-bottom: 6rpx;
}

.drink-caffeine {
  font-size: 22rpx;
  color: #AC886D;
  font-weight: 500;
  background: rgba(172, 136, 109, 0.1);
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  display: inline-block;
  width: fit-content;
}

/* 收藏按钮 */
.favorite-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(172, 136, 109, 0.1);
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(172, 136, 109, 0.2);
}

.favorite-icon {
  font-size: 28rpx;
  color: #c4a08a;
  transition: all 0.3s ease;
}

.favorite-btn.favorited .favorite-icon {
  color: #AC886D;
}

/* 删除按钮样式 */
.delete-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(231, 76, 60, 0.1);
  border: 1rpx solid rgba(231, 76, 60, 0.3);
}

.delete-btn:active {
  transform: scale(0.9);
  background: rgba(231, 76, 60, 0.2);
}

.delete-icon {
  font-size: 24rpx;
  color: #e74c3c;
  transition: all 0.3s ease;
}

/* 自定义添加按钮 */
.custom-add-btn {
  background: #AC886D;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(172, 136, 109, 0.2);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
  border: 1rpx solid #8b6f5a;
}

.custom-add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.2);
}

.custom-add-icon {
  color: #FDF8E3;
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.custom-add-text {
  color: #FDF8E3;
  font-size: 26rpx;
  font-weight: 400;
}

/* 空状态样式 */
.empty-favorites, .empty-custom {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-favorites .empty-icon, .empty-custom .empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.4;
  color: #AC886D;
}

.empty-favorites .empty-text, .empty-custom .empty-text {
  font-size: 24rpx;
  color: #8b6f5a;
  font-weight: 400;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #8b6f5a;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #d4c4a8;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #f8f4e8;
  transition: all 0.3s ease;
  color: #8b6f5a;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #AC886D;
  background: #FDF8E3;
  box-shadow: 0 2rpx 8rpx rgba(172, 136, 109, 0.1);
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #d4c4a8;
  border-radius: 10rpx;
  background: #f8f4e8;
  color: #8b6f5a;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #8b6f5a;
  font-weight: 400;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #e8e0c8;
  display: flex;
  gap: 20rpx;
  background: #FDF8E3;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background: #f8f4e8;
  color: #8b6f5a;
  border: 1rpx solid #d4c4a8;
}

.btn-cancel:active {
  background: #e8e0c8;
  transform: scale(0.98);
}

.btn-confirm {
  background: #AC886D;
  color: #FDF8E3;
  border: 1rpx solid #8b6f5a;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(172, 136, 109, 0.2);
}

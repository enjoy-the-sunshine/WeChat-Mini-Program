.page {
  background: #fdf8e3;
  min-height: 100vh;
  padding: 24rpx 36rpx 80rpx;
  box-sizing: border-box;
}

.header {
  position: relative;
  padding-top: 32rpx;
  padding-bottom: 24rpx;
}

.title {
  font-size: 60rpx;
  font-weight: 700;
  color: #333;
}

.bear {
  position: absolute;
  right: 16rpx;
  top: -20rpx;
  width: 240rpx;
}

.form {
  margin-top: 20rpx;
}

.field {
  margin-bottom: 28rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #6b6b6b;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.password-box {
  position: relative;
}

.eye {
  position: absolute;
  right: 24rpx;
  top: 50%;
  width: 36rpx;
  height: 36rpx;
  transform: translateY(-50%);
}

.primary {
  margin-top: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #e3ecd9;
  color: #6b6b6b;
  border-radius: 44rpx;
}

.other {
  text-align: center;
  margin-top: 28rpx;
}

.other-title {
  color: #333;
  font-size: 28rpx;
}

.agree {
  display: flex;
  align-items: center;
  margin-top: 26rpx;
  color: #6b6b6b;
}

.ck {
  margin-right: 12rpx;
}

.link {
  color: #3c87ff;
  margin: 0 6rpx;
}

.help {
  text-align: center;
  margin-top: 24rpx;
}

.help-link {
  color: #9a9a9a;
  text-decoration: underline;
}
/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FDF8E3;
  height: 100vh;
  padding-top: 60rpx;
}

.bear-fly {
  width: 200rpx;
  margin: 40rpx 0;
}

.title {
  font-size: 40rpx;
  margin-bottom: 40rpx;
}

.input {
  width: 500rpx;
  height: 90rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  margin: 20rpx 0;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.password-box {
  position: relative;
}

.eye {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 999;
}

/* 避免输入框覆盖眼睛图标点击区域 */
.password-box .input {
  padding-right: 100rpx;
}

.agreement {
  width: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin: 30rpx 0;
  color: #797979;
  flex-wrap: wrap;
}

.checkbox {
  margin-right: 12rpx;
  transform: scale(0.8);
}

.link {
  color: #84a9dd;
  margin: 0 4rpx;
}

.btn {
  width: 500rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #D8EADC;
  color: #333;
  text-align: center;
  line-height: 90rpx;
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  outline: none;
}

.tips {
  width: 500rpx;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  margin: 20rpx 0;
  color: #797979;
}

.problem {
  font-size: 24rpx;
  color: #666;
  text-decoration: underline;
}

.page {
  background-color: #fdf5dc;
  min-height: 100vh;
  padding: 40rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
}

.header {
  width: 100%;
  text-align: center;
}

.bear-top {
  width: 380rpx;
  height: auto;
  margin-bottom: 20rpx;
  margin-left:350rpx;
}

.title {
  font-size: 50rpx;
  font-weight: bold;
  margin-bottom: 100rpx;
}

.desc {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.question {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.option {
  display: block;
  width: calc(100vw - 40rpx);
  max-width: none; /* 选项框更宽 */
  margin: 0 auto 20rpx;
  background: white;
  border-radius: 999rpx;
  font-size: 34rpx;
  padding: 24rpx 0;
  color: #909399;
  margin-top: 20rpx;
}

.option.selected {
  background: #ac886d;
  color: #fdf8e3;
}

.nav-btns {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;   /* 居中按钮 */
  padding: 0 20rpx; /* 给两边一点空隙 */
}

.nav-btn {
  display: block;
  width: calc(100vw - 40rpx);
  max-width: none;
  margin: 0 auto 20rpx;
  background: #a1cae2;
  border-radius: 999rpx;
  font-size: 34rpx;
  padding: 24rpx 0;
  color: #797979;
  margin-top: -10rpx;
  margin-bottom: 40rpx;
}

.bear-bottom {
  width: 380rpx;
  height: auto;
  margin-right:350rpx;
}

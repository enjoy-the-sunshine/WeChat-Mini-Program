.container {
  background-color: #fff8dc;
  min-height: 100vh;
  padding: 16rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  background-color: #f5d399;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.title-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fdf8e3;
  height: 100rpx; /* 增大高度（原96rpx） */
  padding: 0 150rpx; /* 增大左右内边距（原32rpx） */
  border-radius: 20rpx; /* 稍微增大圆角 */
  font-size: 36rpx; /* 增大字体（原32rpx） */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.507); /* 增加轻微阴影提升质感 */
}

.brand-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.arrow {
  width: 48rpx; /* 增大箭头（原40rpx） */
  height: 48rpx;
  opacity: 0.7; /* 稍微降低不透明度 */
}

.badge {
  background-color: #0099ff;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  position: absolute;
  right: 32rpx;
}

.divider {
  height: 2rpx;
  background-color: #eec262; /* 更浅的颜色 */
  margin: 20rpx 0; /* 增大分割线上下间距（原16rpx） */
  margin-left: 0rpx; /* 让分割线与列表项文字对齐 */
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 16rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1px solid #eee;
  box-sizing: border-box;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-icon {
  width: 60rpx;
  height: 60rpx;
}

.tab-text {
  font-size: 24rpx;
  margin-top: 4rpx;
}

.active.tab-text {
  color: #0099ff;
}
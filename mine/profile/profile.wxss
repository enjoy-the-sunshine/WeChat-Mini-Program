.container {
  background-color: #fdf8e3;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.card {
  width: 80%;
  background-color: rgba(172, 136, 109, 0.22);
  border-radius: 50rpx;
  margin: 30rpx auto; /* 原来的 30rpx 改成 50rpx，卡片之间空隙更大 */
  padding: 30rpx; /* 内边距加大 */
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  font-family: '思源黑体';
  font-size: 30rpx; /* 字体稍大 */
}

.card-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 0; /* 垂直间距由 10rpx 增加到 30rpx */
  min-height: 100rpx; /* 让每个条目的高度固定在更高的值 */
}



.card-item-right {
  display: flex;
  align-items: center;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.divider {
  height: 1rpx; /* 稍微加粗分隔线 */
  background-color: rgba(0, 0, 0, 0.1);
  width: 100%;
  margin: 0rpx 0; /* 给每条分割线上下加一些距离，让间隔更自然 */
}
.icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.footer-image {
  width: 100%;
  height: 330rpx;
  margin-top: -80rpx;
  object-fit: contain; /* 避免被拉伸 */
}

/* ===== 弹窗样式 ===== */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center; /* 垂直居中 */
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 80%;
  overflow-y: auto;
  background-color: #fdf8e3;
  border-radius: 25rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 弹窗标题：向上偏移 */
.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: -10rpx; /* 上移标题 */
  margin-bottom: 20rpx; /* 缩小与输入框的距离 */
  text-align: center;
}

/* 输入框 */
.modal-input {
  width: 100%;
  background-color: #ffffff;
  border: none;
  padding: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

/* 按钮区域 */
.modal-actions {
  display: flex;
  justify-content: center;
  gap: 40rpx; /* 按钮之间的间距更大 */
  width: 100%;
}

.modal-button {
  background-color: #a1cae2;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 30rpx; /* 缩小水平 padding */
  font-size: 28rpx;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  min-width: 120rpx; /* 明确按钮宽度变窄 */
  text-align: center;
}
.modal-icon {
  width: 150rpx; /* 根据需要调整图标大小 */
  height: 150rpx;
}

.modal-title {
  position: relative;
  top: -55rpx; /* 文字单独向上微调 */
  font-size: 32rpx;
  font-weight: bold;
}

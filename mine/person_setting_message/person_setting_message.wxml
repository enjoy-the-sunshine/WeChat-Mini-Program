<view class="page">

<!-- 总开关：接收通知 -->
<view class="panel">
  <view class="row">
    <text class="row-title" style="font-size: {{font.lg}}rpx">接收通知</text>
    <switch checked="{{settings.receiveNotify}}"
            color="#A1CAE2"
            bindchange="onToggle"
            data-key="receiveNotify" />
  </view>
</view>

<!-- 健康预警与提醒 -->
<view class="group-title" style="font-size: {{font.h2}}rpx">健康预警与提醒</view>
<view class="panel">
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">每日摄入量提醒</text>
    <switch checked="{{settings.dailyIntake}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="dailyIntake" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">入睡时间提醒</text>
    <switch checked="{{settings.sleepTime}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="sleepTime" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">元气值变化提醒</text>
    <switch checked="{{settings.energyChange}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="energyChange" />
  </view>
</view>

<!-- 社区与互动 -->
<view class="group-title" style="font-size: {{font.h2}}rpx">社区与互动</view>
<view class="panel">
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">收到的赞</text>
    <switch checked="{{settings.likeNotify}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="likeNotify" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">收到的收藏</text>
    <switch checked="{{settings.collectNotify}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="collectNotify" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">收到的评论</text>
    <switch checked="{{settings.commentNotify}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="commentNotify" />
  </view>
</view>

<!-- 系统与其他 -->
<view class="group-title" style="font-size: {{font.h2}}rpx">系统与其他</view>
<view class="panel">
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">系统公告</text>
    <switch checked="{{settings.systemNotify}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="systemNotify" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">新功能推荐</text>
    <switch checked="{{settings.featureNotify}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="featureNotify" />
  </view>
</view>

<!-- 勿扰模式 -->
<view class="group-title" style="font-size: {{font.h2}}rpx">勿扰模式</view>
<view class="panel">
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">启用勿扰模式</text>
    <switch checked="{{settings.dndMode}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="dndMode" />
  </view>
  <view class="row {{disabledCls}}">
    <text class="row-title" style="font-size: {{font.lg}}rpx">勿扰模式时间设定</text>
    <switch checked="{{settings.dndTime}}"
            color="#A1CAE2"
            disabled="{{childrenDisabled}}"
            bindchange="onToggle"
            data-key="dndTime" />
  </view>
</view>

</view>
